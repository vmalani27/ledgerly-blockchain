{
  "info": {
    "name": "Ledgerly PaymentManager Middleware",
    "description": "Test PaymentManager endpoints including user-to-user payments.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Send Payment (Deployer)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"toWallet\": \"0xD1f06C597Ea897DF30f76390c9C9Baf8eDDC11BB\",\n  \"amountEth\": \"0.01\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/payment/send",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["payment", "send"]
        }
      }
    },
    {
      "name": "User-to-User Payment",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fromWallet\": \"0xD1f06C597Ea897DF30f76390c9C9Baf8eDDC11BB\",\n  \"toWallet\": \"0x08997cF46a1b9288e2CD5b5a9A4CECC73dF1d10a\",\n  \"amountEth\": \"0.02\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/payment/send-from",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["payment", "send-from"]
        }
      }
    },
    {
      "name": "Batch Payment",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"toWallets\": [\n    \"0xD1f06C597Ea897DF30f76390c9C9Baf8eDDC11BB\",\n    \"0x08997cF46a1b9288e2CD5b5a9A4CECC73dF1d10a\"\n  ],\n  \"amountsEth\": [\"0.01\", \"0.02\"]\n}"
        },
        "url": {
          "raw": "http://localhost:3001/payment/batch",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["payment", "batch"]
        }
      }
    },
    {
      "name": "Withdraw (Owner Only)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amountEth\": \"0.01\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/payment/withdraw",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["payment", "withdraw"]
        }
      }
    }
  ]
}
